@using Sitecore.Mvc
@using Sitecore.Mvc.Analytics.Extensions
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en" xmlns="http://www.w3.org/1999/xhtml">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="assets/css/bootstrap-themed.min.css">
    <link rel="stylesheet" href="assets/css/blogsite.css">

    <title>Sitecore Powered Blog</title>

</head>
<body>
    <div class="container">
        <div class="jumbotron text-white bg-primary">
            <div>
                @Html.Sitecore().Placeholder("phHeader")
            </div>
        </div>
    </div>

    <main role="main" class="container blog-posts">

        <div>
            @Html.Sitecore().Placeholder("phMain")
        </div>
        </main>
        <Footer>
            <div class="container">
                <div class="text-white bg-primary">
                    <p class="lead">
                        @Html.Sitecore().Placeholder("phFooter")
                    </p>
                </div>
            </div>
        </Footer>


</body>
</html>